{
  "name": "tno-core",
  "description": "TNO shared library",
  "version": "0.0.89",
  "homepage": "https://github.com/bcgov/tno",
  "license": "Apache-2.0",
  "files": [
    "dist/**/*",
    "src/**/*",
    "package.json"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "unpkg": "dist/index.min.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@headlessui/react": "1.4.3",
    "@react-keycloak/web": "3.4.0",
    "axios": "0.25.0",
    "formik": "2.2.9",
    "history": "5.2.0",
    "keycloak-js": "16.1.1",
    "lodash": "4.17.21",
    "lodash.throttle": "4.1.1",
    "moment": "2.29.1",
    "moment-timezone": "0.5.34",
    "react": "17.0.2",
    "react-datepicker": "4.6.0",
    "react-dom": "17.0.2",
    "react-error-boundary": "3.1.4",
    "react-error-overlay": "6.0.10",
    "react-icons": "4.3.1",
    "react-inlinesvg": "2.3.0",
    "react-table": "7.7.0",
    "react-toastify": "8.1.0",
    "react-tooltip": "4.2.21",
    "styled-components": "5.3.1",
    "yup": "0.32.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/customize-cra": "1.0.2",
    "@types/history": "5.0.0",
    "@types/jest": "27.4.0",
    "@types/lodash.throttle": "4.1.6",
    "@types/node": "16.11.13",
    "@types/pretty": "2.0.1",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-table": "7.7.9",
    "@types/styled-components": "5.1.9",
    "@types/yup": "0.29.13",
    "axios-mock-adapter": "1.20.0",
    "compression-webpack-plugin": "9.2.0",
    "cpy-cli": "3.1.1",
    "cross-env": "7.0.3",
    "customize-cra": "1.0.0",
    "del-cli": "4.0.1",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "node-sass": "7.0.0",
    "prettier": "2.5.1",
    "pretty": "2.0.0",
    "pretty-quick": "3.1.2",
    "sass-extract": "2.1.0",
    "sass-extract-js": "0.4.0",
    "sass-extract-loader": "1.1.0",
    "ts-loader": "9.2.6",
    "typescript": "4.5.5"
  },
  "resolutions": {},
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc --build",
    "postbuild": "yarn run copy-files",
    "copy-files": "cpy '**/*' '!**/*.ts*' ../dist/ --cwd=src/ --no-overwrite --parents; cp -r ./src/@types ./dist/@types",
    "clean": "rm -rf dist/; find ./src -type f -name '*.d.ts' ! -path './src/@types/*' -delete",
    "pretty-quick": "pretty-quick",
    "lint": "eslint src/ --ext .jsx,.js,.ts,.tsx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "check": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "prepublish": "yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
