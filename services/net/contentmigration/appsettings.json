{
  "BaseUrl": "/",
  "Logging": {
    "Console": {
      "DisableColors": true
    },
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "TNO": "Information"
    }
  },
  "AllowedHosts": "*",
  "Service": {
    "MaxFailLimit": 5,
    "ApiUrl": "http://api:8080",
    "IngestTypes": "TNO-Image,TNO-PrintContent,TNO-AudioVideo,TNO-Story",
    "TimeZone": "Pacific Standard Time",
    "ActionNameMappings": {
      "TopStory": "Top Story"
    },
    "ClipMigrator": {
      "SupportedIngests": ["TNO 1.0 - AudioVideo Content"],
      "IngestSourceMappings": {},
      "ProductMappings": {
        "TV": "TV / Video News"
      }
    },
    "ImageMigrator": {
      "SupportedIngests": ["TNO 1.0 - Image Content"],
      "IngestSourceMappings": {},
      "ProductMappings": {
        "Newspaper": "Corporate Calendar"
      }
    },
    "PaperMigrator": {
      "SupportedIngests": ["TNO 1.0 - Story Content", "TNO 1.0 - Print Content"],
      "IngestSourceMappings": {
        "BiV": "BIV",
        "CBC | Aboriginal News": "CBCINDIGNEWS",
        "CJVB Online": "CJVB",
        "Castanet.net - Most Recent Stories": "CASTANET",
        "CP News": "CPNEWS",
        "Eagle Valley News": "SEVN",
        "The Hook Home": "TYEE"
      },
      "ProductMappings": {
        "Newspaper": "Daily Print",
        "CP News": "CP Wire",
        "Regional": "Weekly Print",
        "Internet": "Online"
      }
    }
  },
  "Auth": {
    "Keycloak": {
      "Authority": "https://loginproxy.gov.bc.ca/auth",
      "Audience": "mmia-service-account-3994",
      "Secret": "{DO NOT STORE SECRET HERE}"
    },
    "OIDC": {
      "Token": "/realms/standard/protocol/openid-connect/token"
    }
  },
  "Serialization": {
    "Json": {
      "PropertyNamingPolicy": "CamelCase",
      "PropertyNameCaseInsensitive": true,
      "DefaultIgnoreCondition": "WhenWritingNull",
      "WriteIndented": true
    }
  }
}
