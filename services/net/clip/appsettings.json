{
  "BaseUrl": "/",
  "Logging": {
    "Console": {
      "DisableColors": true
    },
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "TNO": "Information"
    }
  },
  "AllowedHosts": "*",
  "Service": {
    "MaxFailLimit": 5,
    "ApiUrl": "http://api:8080",
    "TimeZone": "UTC",
    "VolumePath": "/data",
    "Command": "ffmpeg",
    "IngestTypes": "Audio, Video"
  },
  "Auth": {
    "Keycloak": {
      "Authority": "https://oidc.gov.bc.ca/auth/realms/gcpe",
      "Audience": "tno-service-account",
      "Secret": "{DO NOT STORE SECRET HERE}"
    }
  },
  "Serialization": {
    "Json": {
      "PropertyNamingPolicy": "CamelCase",
      "PropertyNameCaseInsensitive": true,
      "DefaultIgnoreCondition": "WhenWritingNull",
      "WriteIndented": true
    }
  }
}
