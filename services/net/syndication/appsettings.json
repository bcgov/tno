{
  "BaseUrl": "/",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Service": {
    "MaxFailLimit": 5,
    "ApiUrl": "http://api:8080",
    "MediaTypes": ["Syndication"],
    "TimeZone": "Pacific Standard Time"
  },
  "Auth": {
    "Keycloak": {
      "Authority": "https://oidc.gov.bc.ca",
      "Audience": "tno-service-account",
      "Realm": "gcpe",
      "Secret": "{DO NOT STORE SECRET HERE}"
    }
  },
  "Serialization": {
    "Json": {
      "PropertyNamingPolicy": "CamelCase",
      "PropertyNameCaseInsensitive": true,
      "DefaultIgnoreCondition": "WhenWritingNull",
      "WriteIndented": true
    }
  },
  "Kafka": {
    "Producer": {
      "ClientId": "Syndication",
      "BootstrapServers": "kafka-broker-0.kafka-headless:9092,kafka-broker-1.kafka-headless:9092,kafka-broker-2.kafka-headless:9092",
      "Acks": "All",
      "EnableIdempotence": true,
      "MaxInFlight": 5,
      "MessageSendMaxRetries": 10000000,
      "BatchSize": 16384,
      "LingerMs": 1
    }
  }
}
